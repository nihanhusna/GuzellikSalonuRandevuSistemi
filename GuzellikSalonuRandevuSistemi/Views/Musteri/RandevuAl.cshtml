@model GüzellikSalonuSistemi.Models.RandevuViewModel

<h2>Randevu Al</h2>

<form asp-action="RandevuOnay" method="post">
    <div>
        <label>İşlem Seçin</label>
        <select asp-for="İşlemId" asp-items="@(new SelectList(Model.İşlemler, "Id", "Adı"))"></select>
    </div>
    <div>
        <label>Randevu Tarihi</label>
        <input type="datetime-local" asp-for="RandevuTarihi" />
    </div>
    <button type="submit">Randevu Al</button>
</form>
